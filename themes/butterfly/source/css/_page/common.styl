.layout
  display: flex
  margin: 0 auto
  padding: 0rem 15px
  max-width: 1200px

  +maxWidth900()
    flex-direction: column

  +maxWidth768()
    padding: 0rem 0px

  +minWidth2000()
    max-width: 1500px

  & > div:first-child:not(.recent-posts)
    align-self: flex-start
    padding: 50px 40px
    background: var(--card-bg)

    +maxWidth768()
      padding: 1.8rem .7rem
      margin-top: -1px

  & > div:first-child
    width: 75%
    transition: all .3s

    +maxWidth900()
      width: 100% !important

    if hexo-config('aside.position') == 'left'
      +minWidth900()
        order: 2

  // 隱藏aside
  &.hide-aside
    max-width: 1000px

    +minWidth2000()
      max-width: 1300px

    & > div
      width: 100% !important
