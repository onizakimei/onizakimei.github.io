#footer
  position: relative
  background: $light-blue
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: transparent
      content: ''

#footer-wrap
  position: relative
  padding: 2rem 1rem
  color: white
  text-align: center
  text-shadow: -1px 1px 3px #1b91ff, 1px 1px 3px #1b91ff, 1px -1px 3px #1b91ff, -1px -1px 3px #1b91ff

  a
    color: white
    text-shadow: -1px 1px 3px #1b91ff, 1px 1px 3px #1b91ff, 1px -1px 3px #1b91ff, -1px -1px 3px #1b91ff

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto
